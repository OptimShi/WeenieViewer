<TabItem x:Class="WeenieViewer.Controls.TabMissingWeenies"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeenieViewer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgMissingItems" AutoGenerateColumns="False" HorizontalGridLinesBrush="#FF767575" VerticalGridLinesBrush="#FF747474" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" MinWidth="5" CanUserResizeRows="False" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Source WCID" Binding="{Binding Path=sourceWCID}" IsReadOnly="True" Width="1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Source" Binding="{Binding Path=sourceName}" IsReadOnly="True" Width="1*"></DataGridTextColumn>
                <DataGridTextColumn Header="Missing WCID" Binding="{Binding Path=wcid}" IsReadOnly="True" Width="1*"/>
                <DataGridTextColumn Header="Context" Binding="{Binding Path=context}" IsReadOnly="True" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</TabItem>
