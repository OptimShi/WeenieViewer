<Window x:Class="WeenieViewer.dlgSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeenieViewer"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Title="Search Weenies..." Height="140" Width="215">
    <Grid>
        <Label Content="Enter a name or Weenie ID (wcid):" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,1.173" Margin="10,10,0,0"/>
        <TextBox Name="txtSearch" HorizontalAlignment="Left" Height="24" Margin="14,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="30,79,0,0" VerticalAlignment="Top" Width="74" Click="OK_Click" IsDefault="True" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="118,79,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.12,2.257" IsCancel="True"/>

    </Grid>
</Window>